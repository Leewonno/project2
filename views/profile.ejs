                },
            }).then((res) => {
                if (res.data.result) {
                    alert('회원탈퇴 완료되었습니다');
                    document.cookie = 'token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;'; 
                    document.location.href = '/';
                }
            });
        }
